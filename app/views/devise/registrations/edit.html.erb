<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item">
        <%= link_to "Edit Profile", edit_user_registration_path, class: "sidebar-link active" %>
      </li>
    </ul>
    <br/>
    <%= link_to "View My Profile", user_path(current_user.id), class: "btn btn-normal" %>
  </div>
  <div class="col-md-9 text-center">
    <div class="panel panel-default">
      <div class="panel-heading">Your Profile</div>
      <div class="panel-body">
        <div class="container">
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "shared/devisemes", resource: resource %>

      <div class="form-group">
        <%= f.text_field :fullname, autofocus: true, placeholder: "Full Name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_field :phone_number, autofocus: true, placeholder: "Phone Number", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.text_area :description, rows: 5, cols: 25, autofocus: true, placeholder: "Tell us about you...", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />

        <%= f.password_field :password, autocomplete: "new-password", placeholder: "New Password", class: "form-control" %>

      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm New Password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label "Current Profile Photo:" %>
        <% if @user.avatar.attached? %>
          <image src="<%=(url_for(@user.avatar))%>">
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label "Upload Profile Photo (Optional)" %>
        <%= f.file_field :avatar, class: "form-control", placeholder: "Upload Profile Photo" %>
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn btn-normal btn-block" %>
      </div>
    <% end %>

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Yeah fuck this I'm out", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

    <%= link_to "Back", :back %>
        </div>
      </div>
    </div>
  </div>
</div>