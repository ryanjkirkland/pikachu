<div class="row">
	<div class="col-md-3">
		<%= render 'room_menu' %>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">
			<div class="panel-heading">
				Photos
			</div>
			<div class="panel-body">
				<div class="container">
					<div class="row">
						<div class="col-md-offset-3 col-md-6">
							<%= form_for @room do |f| %>
								<div class="form-group">
						        <%= f.label "Upload Photos of Your Listing" %>
						        <%= f.file_field :images, multiple: true, class: "form-control", placeholder: "Upload Photos", required: true %>
						    	</div>
						    	<div class="actions">
							      <%= f.submit "Update", class: "btn btn-normal btn-block" %>
							    </div>
					    	<% end %>
						</div>
					</div>
					<div class="row">
						<% if @room.images.attached? %>
							<div id="photos"><%= render "photos_list" %></div>
						<% else %>
							<h2> There are no images here</h2>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
