<%= form_for([@room, @room.reservations.new]) do |f| %>
	<div class="panel-heading"><h3>Book Your Stay</h3></div>
	<div class="panel panel-body">
		<div class="form-group">
			<%= f.text_field :start_date, placeholder: "Start date...", class: "form-control", autocomplete: "off" %>
		</div>
		<div class="form-group">
			<%= f.text_field :end_date, placeholder: "End date...", class: "form-control", autocomplete: "off" %>
		</div>

		<%= f.submit "Book Now", class: "btn btn-normal btn-block" %>
	</div>
<% end %>

<script>
	$(function(){
		$('#reservation_start_date').datepicker({
			dateFormat: 'dd-mm-yy'
		});
		$('#reservation_end_date').datepicker({
			dateFormat: 'dd-mm-yy'
		});
	});
</script>