<div class="panel panel-default">
	<div class="panel-heading">
		<span><i class="fa fa-bolt" style="color: #ffb400"></i>$<%= @room.price %></span>
		<span class="pull-right">Per Night</span>
	</div>
	<div class="panel-body">
		
		<%= form_for([@room, @room.reservations.new]) do |f| %>
			<div class="row">
				<div class="col-md-6">
					<label>Pick Up</label>
					<%= f.text_field :start_date, readonly: true, placeholder: "Start date...", class: "form-control datepicker", autocomplete: "off" %>
				</div>
				<div class="col-md-6">
					<label>Drop Off</label>
					<%= f.text_field :end_date, readonly: true, placeholder: "End date...", class: "form-control datepicker", autocomplete: "off", disabled: true %>
				</div>
			</div>

			<div id="preview" style="display: none">
				<table class="reservation-table">
					<tbody>
						<tr>
							<td>Price</td>
							<td class="text-right">$<%= @room.price %></td>
						</tr>
						<tr>
							<td>Night(s)</td>
							<td class="text-right"><span id="reservation-days"></span></td>
						</tr>
						<tr>
							<td class="total">Total</td>
							<td class="text-right">$<span id="reservation-total"></span></td>
						</tr>
					</tbody>
				</table>
			</div>
			<br/>
			<%= f.submit "Book Now", class: "btn btn-normal btn-block" %>
		<% end %>
	</div>
</div>

<script>
	$(function(){
		$('#reservation_start_date').datepicker({
			dateFormat: 'dd-mm-yy'
		});
		$('#reservation_end_date').datepicker({
			dateFormat: 'dd-mm-yy'
		});
	});
</script>